# editorconfig.org
root = true

[*]
charset = utf-8
# We don't explicitly set the end of line so for Windows
# it'll save as CRLF and for Mac/Linux it'll save as LF.
# end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
